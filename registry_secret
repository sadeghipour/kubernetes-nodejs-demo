apiVersion: v1
kind: Secret
metadata:
  name: digitalocean-registry-secret
  namespace: <namespace>  # Replace with the appropriate namespace
type: kubernetes.io/dockerconfigjson
data:
  .dockerconfigjson: |
    {
      "auths": {
        "registry.digitalocean.com": {
          "auth": "<base64-encoded-username-and-password>"
        }
      }
    }
